<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Question">
	
	<insert id="insertQuestion">
		insert into june_question(user_id, title, content)
		values(
			1,
			#{title},
			#{content}
		)
	</insert>
	
	<update id="updateQuestion">
		update june_question set
			user_id = 1,
			title = #{title},
			content = #{content}
		where id = #{id}
	</update>
	
	<delete id="deleteQuestion">
		delete from june_question
		where id = #{id}
	</delete>
	
	<select id="selectOneQuestion" resultType="com.inflearnVO.QuestionVO">
		select * from june_question
		where id = #{id}
	</select>
	
	<select id="selectListQuestion" resultType="map">
		select * from june_question
	</select>
</mapper>